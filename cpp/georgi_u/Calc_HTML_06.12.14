<html>
<head>
<meta http-equiv="Content-Type" content="text/html"; charset="utf-8">
<title>currency</title>
<script language="JavaScript">
function Show() {

var rad = document.getElementsByName("group1");
				
				var Dollar = false;
				var Frank = false;
				var Pound = false;
				for (var i = 0; i < rad.length; i++)
				{
					if(rad[i].value == "Dollar" && rad[i].checked)
					{
						Dollar = true;
						document.forms.exchange.rate.value=0.689579;
						break;
					}
					else{
					if(rad[i].value == "Frank" && rad[i].checked)
					{
						Frank = true;
						document.forms.exchange.rate.value=0.91234;
						break;
					}
					else{
					if(rad[i].value == "Pound" && rad[i].checked)
					{
						Pound = true;
						document.forms.exchange.rate.value=0.44843;
						break;
					}
					}
					}

}
}

function calculate()
			{
				
				var rate = parseFloat(document.forms.exchange.rate.value);
				var oldsum = parseFloat(document.forms.exchange.oldsum.value);
				var finalverse= rate * oldsum;

			document.forms.exchange.newsum.value = finalverse.toFixed(2);
			}
		</script>

</script>
</head>
<body>
<fieldset>
<legend> Валутен калкулатор </legend>
<form name="exchange">
Въведете сумата в лева<input type="text" name="oldsum"> <br><br>

<input type="radio" name="group1" value="Dollar" onchange="Show()" > Долари<br>
<input type="radio" name="group1" value="Frank" onchange="Show()"> Франка<br>
<input type="radio" name="group1" value="Pound" onchange="Show()" > Пaунда<br>

<br>
<input type="button" name="equal" value="Show Me The Money" onClick="calculate()"> <br><br>
Обменен курс <input type="text" name="rate"> <br><br>
Сумата в новата валута<input type="text" name="newsum"> <br><br>
</form>
</fieldset>
</body>
</html>
